{
    "manifest_version": 2,
    "description" : "drawing extention on any webpage.",
    "name":"p5 sketch",
    "version":"0.1",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions":["tabs","storage"],
    "content_scripts":[
        {
            "js":["p5/p5.js","sketch.js"],
            "matches":["<all_urls>"]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "a popup"
    }   

}